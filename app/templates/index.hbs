<style>
    .spacer
    {
        margin-top: 100px;
    }
    .meetings
    {
        z-index: 5;
    }
    .inlineCreateButton
    {
      color: black;
        font-size: 48px;
        transition: 0.2s ease;
        width: auto;
    }
    .inlineCreateButton:hover
    {
        border: solid black 4px;
    }
</style>

{{#if this.visited}}
  {{auto-scroll}}
{{/if}}

  <div id= "top" class="container-fluid big">
      <div class="row titleRow">
          <h1 >OSF for Meetings</h1>
          <h3>A free sharing service for academic meetings and conferences</h3>
          <h4>Broaden your impact, create an open scholar environment</h4>
      <button {{action 'scrollit'}} type="button" value="continue" class="btn btn-success">Begin Sharing</button>
      </div>
  </div>


<nav class="navbar navbar-default">
  <div class="container-fluid" id="browse">
    <a class="navbar-brand">Meetings</a>
    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search">
      </div>
      <button type="submit" disabled class="btn btn-default">Submit</button>
    </form>
    <div id="createButton">
      <button class="btn btn-success navbar-btn" {{action "create"}}>
        <span class="glyphicon glyphicon-plus"></span>
        Create a Meeting
      </button>
    </div> 
  </div>
</nav>
<div id="bottom" class="container-fluid">
    <div class="row">
      <div id="meetings" class="col-md-9">
        {{#masonry-grid  gutter=20 items=model as |conf|}}
          {{#link-to "conference.index" conf.id}}
            {{meeting-masonry title=conf.title description=conf.description logo=conf.logo author=conf.author city=conf.city state=conf.state
            date=conf.startDate}}
          {{/link-to}}
        {{/masonry-grid}}
      </div>
    </div>
  {{outlet}}
</div>

