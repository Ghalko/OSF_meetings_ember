<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">

            <h3 class="text-center text-primary">
            </h3>
            <h2>
                Peer Review Dashboard
            </h2>

            <div class="input-group"> <span class="input-group-addon">Filter</span>

                <input id="filter" type="text" class="form-control" placeholder="Type here..." {{action 'filterdata'}}>
            </div>

            <table class="table table-hover table-striped">
                <thead>

                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Conference
                    </th>
                    <th>
                        Review Deadline
                    </th>
                    <th>
                        Status
                    </th>
                    <th>

                    </th>
                </tr>
                </thead>
                <tbody class="searchable">
                {{#each model.reviewsdate as |d|}}

                    <tr >
                        <td>
                          {{d.id}}
                        </td>
                        <td>
                          {{d.title}}
                        </td>
                        <td>
                          {{d.conference}}
                        </td>
                        <td>
                          {{d.reviewdeadline}}
                        </td>
                        <td>
                          {{d.status}}
                        </td>

                        <td>
                            <form><input type=submit value="View" style="width:100%" {{action 'openreview'}}></form>
                        </td>
                        <td>
                            <form><input type=submit id="abutton" value="Approve" style="width:100%" {{action 'showapprove'}}></form>
                        </td>
                        <td>
                            <form><input type=submit value="Contact Author" style="width:100%" {{action 'showdata'}}></form>
                        </td>





                    </tr>
                {{/each}}
                </tbody>
            </table>



        </div>
    </div>


</div>


{{#if isshowingapprove}}
  {{#modal-dialog close="hideapprove"
  targetAttachment="center"
  translucentOverlay=true}}
      <form class="form-horizontal">
          <fieldset>

              <!-- Form Name -->
              <legend>Review Assignment</legend>

              <!-- Select Basic -->
              <div class="form-group">
                  <label class="col-md-4 control-label" for="selectbasic">Assign to</label>
                  <div class="col-md-4">
                      <select id="selectbasic" name="selectbasic" class="form-control" style="width: 170px">
                          <option value="1">Any Available Reviewer</option>
                          <option value="2">Specific Reviewer</option>
                      </select>

                  </div>
              </div>

              <!-- Button (Double) -->
              <div class="form-group">
                  <label class="col-md-4 control-label" for="button1id"></label>
                  <div class="col-md-8">
                      <button id="button1id" name="button1id" class="btn btn-success" {{action 'hideapprove' 'ok'}}>Ok</button>
                      <button id="button2id" name="button2id" class="btn btn-danger" {{action 'hideapprove' 'cancel'}}>Cancel</button>
                  </div>
              </div>

          </fieldset>
      </form>


  {{/modal-dialog}}
{{/if}}



{{#if isshowingcontact}}
  {{#modal-dialog close="hidedata"
  targetAttachment="center"
  translucentOverlay=true}}
      <form class="form-horizontal" style="width: 1000px">
          <fieldset>

              <!-- Form Name -->
              <legend>Contact Author</legend>

              <!-- Textarea -->
              <div class="form-group" >
                  <label class="col-md-4 control-label" for="textarea">Email Message</label>
                  <div class="col-md-4">
                      <textarea class="form-control" id="textarea" name="textarea" rows="10" style="width: 600px">{{msgtemplate}} </textarea>
                  </div>
              </div>

                           <!-- Button (Double) -->
              <div class="form-group">
                  <label class="col-md-4 control-label" for="button1id"></label>
                  <div class="col-md-8">
                      <button id="button1id" name="button1id" class="btn btn-success" {{action 'hidedata'}}>Send</button>
                      <button id="button2id" name="button2id" class="btn btn-danger" {{action 'hidedata'}}>Cancel</button>
                  </div>
                {{#bs-progress}}
                  {{bs-progress-bar value=progressValue minValue=0 maxValue=10 showLabel=true type="danger"}}
                {{/bs-progress}}
              </div>

          </fieldset>
      </form>
  {{/modal-dialog}}
{{/if}}


{{outlet}}

