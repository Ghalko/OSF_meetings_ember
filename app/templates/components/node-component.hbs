<style>
    .tile
    {
        height: 350px;
        width: 350px;
        margin-bottom: 10px;
        text-decoration: none;
        transition: 0.2s ease;
        overflow: hidden;

    }
    .tile:hover
    {
        height: 354px;
        width: 354px;
        padding: 4px 4px 0 0;
    }
</style>

<div class="tile" style="background-image: url({{image}})">
    <h1>{{title}}</h1>
    <h4>{{description}}</h4>
    <h4>
    {{#each contributors as |contributor|}}
        {{contributor.users.fullName}}
    {{/each}}
    </h4>
</div>
